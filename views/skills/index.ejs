<%- include ('../partials/head.ejs')%>
  <%- include('../partials/nav.ejs')%>
    
    <% if(error) { %>
      <h2><%= error %></h2>
    <% } %>
    <ul>
      <% skills.forEach(function(skill) { %>
        <li>
          <form action="/skills/<%= skill._id %>/edit" class="edit-form" method="GET">
            <button type="submit">Edit</button>
          </form>
          <form action="/skills/<%= skill._id %>?_method=DELETE" class="delete-form" method="POST">
            <button type="submit">X</button>
          </form>
          <a href="/skills/<%= skill._id %>"><%= skill.devSkill %></a>
        </br> - 
          <b>Your ability?</b> <%= skill.able%>
        </li>
      <% }) %>
    </ul>
    <a href="/skills/new">Add To-Do</a>